<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/themes/base/jquery-ui.css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/jquery.unobtrusive-ajax.min.js")
    @Scripts.Render("~/Scripts/jquery-ui-1.10.4.min.js")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
          <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (Request.IsAuthenticated)
                    {
                        <li>
                    <a href="@Url.Action("AllPhotos", "Album")">AllPhotos</a>
                        </li>    
                                    
                        <li>
                            <a href="@Url.Action("Manage", "UserAlbum")">MyPhotos</a>
                        </li>
                   }
                </ul>
              <ul class="nav navbar-nav navbar-right">
                  @if (Request.IsAuthenticated)
                  {
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <span class="glyphicon glyphicon-user glyphicon-margin-right"></span> @User.Identity.Name<span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li class="">
                                <a href="@Url.Action("EditProfile", "User", new { login = User.Identity.Name })">
                                    <span class="glyphicon glyphicon-user"></span>
                                    Edit                                    
                                </a>
                            </li>
                            <li>
                                <a href="@Url.Action("LogOut", "User")">
                                    <span class="glyphicon glyphicon-log-out"></span>
                                    LogOut
                                </a>
                            </li>
                        </ul>
                    </li>
                  }
                  else
                  {
                    <li>
                        <a href="@Url.Action("LogIn", "User")">
                            <span class="glyphicon glyphicon-log-in glyphicon-margin-right"></span>LogIn
                        </a>
                    </li>
                  }
              </ul>
            </div>
        </div>
    </div>
   
      @RenderBody()            
    @RenderSection("scripts", required: false)
</body>
</html>
